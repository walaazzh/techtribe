                    <a href="#" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Forms</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Tables</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="{{ path('user_index') }}" class="dropdown-item">Users </a>
                            {# <a href="{{ path('app_donor_index') }}" class="dropdown-item">Donors</a> #}
                            {# <a href="{{ path('app_hospital_index') }}" class="dropdown-item">Hospitals</a> #}
                            <a href="{{ path('app_blood_stock_index') }}" class="dropdown-item">Blood Stock</a>
                            <a href="{{ path('app_blood_transaction_index') }}" class="dropdown-item">Blood Transactions</a>
                            <a href="{{ path('app_centrecollect_index') }}" class="dropdown-item">Collect Center</a>
                            <a href="{{ path('app_event_index') }}" class="dropdown-item">Events</a>
                            <a href="{{ path('app_event_category_index') }}" class="dropdown-item">Events Category</a>
                            <a href="{{ path('app_rendezvous_index') }}" class="dropdown-item">Appointments</a>
                            <a href="{{ path('app_ticket_index') }}" class="dropdown-item">Tickets</a>
                            <a href="{{ path('app_reclamation_index') }}" class="dropdown-item">Reclamation</a>
                        
                        
                        </div>
                    </div>
                    <a href="#" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Charts</a>
                    
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
     <div class="content">
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
