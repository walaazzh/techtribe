{% extends 'base.html.twig' %}

{% block title %}Hospital{% endblock %}

{% block body %}
    <h1>Hospital</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hospital.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hospital.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ hospital.location }}</td>
            </tr>
            <tr>
                <th>Contact_number</th>
                <td>{{ hospital.contactNumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ hospital.email }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ hospital.website }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ hospital.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_hospital_edit', {'id': hospital.id}) }}">edit</a>

    {{ include('hospital/_delete_form.html.twig') }}
{% endblock %}
