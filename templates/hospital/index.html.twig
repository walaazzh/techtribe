{% extends 'base_admin.html.twig' %}

{% block title %}Hospital index{% endblock %}

{% block body %}
    <h1>Hospitals Table</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Location</th>
                <th>Contact_number</th>
                <th>Email</th>
                <th>Website</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hospital in hospitals %}
            <tr>
                <td>{{ hospital.id }}</td>
                <td>{{ hospital.name }}</td>
                <td>{{ hospital.location }}</td>
                <td>{{ hospital.contactNumber }}</td>
                <td>{{ hospital.email }}</td>
                <td>{{ hospital.website }}</td>
                <td>{{ hospital.password }}</td>
                <td>
                    <a href="{{ path('app_hospital_show', {'id': hospital.id}) }}">show</a>
                    <a href="{{ path('app_hospital_edit', {'id': hospital.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hospital_new') }}">Add new</a>
{% endblock %}
