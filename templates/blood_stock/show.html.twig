    <h1>BloodStock</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blood_stock.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ blood_stock.name }}</td>
            </tr>
